<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/purchaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="12/7/18"
                android:textColor="@color/whitetext"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/purchaseOpeningBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:text="1000 pts"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/purchaseVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchaseOpeningBalance"
                android:layout_marginBottom="2dp"
                android:text="Points awarded to sowmya"
                android:textColor="@color/whitetext"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/purchaseClosingBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/purchaseVendorName"
                android:layout_marginBottom="2dp"
                android:text="20000 pts"
                android:textColor="@color/whitetext"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>