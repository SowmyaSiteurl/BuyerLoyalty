<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/actiontoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vendor name" />

                <EditText
                    android:id="@+id/edtvendor_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="k kumar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vendor id" />

                <EditText
                    android:id="@+id/edtvendor_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="purchase_amount" />

                <EditText
                    android:id="@+id/edtproduct_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="800" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <EditText
                    android:id="@+id/edtproduct_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="vega helmet" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach bill / product image" />


            <ImageView
                android:id="@+id/my_product_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/addimage" />

            <TextView
                android:id="@+id/getlogin_tv"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:letterSpacing="0.025"
                android:onClick="cliamrequest"
                android:padding="10dp"
                android:text="Cliam request"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>