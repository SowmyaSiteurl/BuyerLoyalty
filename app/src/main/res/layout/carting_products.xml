<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/priceofproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout3"
                android:layout_alignLeft="@+id/nameofproduct"
                android:layout_alignStart="@+id/nameofproduct"
                android:gravity="right"
                android:text="Trendz Loyalty"
                android:textColor="@color/whitetext" />

            <TextView
                android:id="@+id/nameofproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/priceofproduct"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:gravity="right"
                android:text="Trendz Loyalty"
                android:textColor="@color/whitetext" />

            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/linearLayout3w"
                android:layout_toStartOf="@+id/linearLayout3w">

                <ImageView
                    android:id="@+id/removeshop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:src="@drawable/ic_highlight_off_prime_48dp" />

                <TextView
                    android:id="@+id/declineTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/removeshop"
                    android:layout_gravity="center"
                    android:text="Remove"
                    android:textAlignment="center"
                    android:textColor="@color/whitetext" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout3w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp">

                 <ImageView
                     android:id="@+id/shopimage"
                     android:layout_width="23dp"
                     android:layout_height="23dp"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true"
                     android:layout_gravity="right"
                     android:gravity="center"
                     android:src="@drawable/ic_check_circle_prime_48dp" />

                 <TextView
                     android:id="@+id/shopTV"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true"
                     android:layout_below="@+id/shopimage"
                     android:layout_gravity="center"
                     android:text="shop now"
                     android:textAlignment="center"
                     android:textColor="@color/whitetext" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>