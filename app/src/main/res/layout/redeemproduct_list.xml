<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/redeem_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/redeem_product_name"
            android:layout_marginTop="24dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/redeem_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:text="Product Name"
            android:textColor="@color/whitetext"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/redeem_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/redeem_product_name"
            android:text="Product Description"
            android:textColor="@color/whitetext" />

        <ImageView
            android:id="@+id/newImage1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/newoffer"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/endingSoon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ending"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/expired1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/expiry"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/redeemOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/redeemRules"
            android:src="@drawable/offertags" />

        <CheckBox
            android:id="@+id/shop_now_redeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/redeemRules"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/ic_add_shopping_cart_black_24dp"
            android:buttonTint="@color/whitetext"
            android:text="Add to Cart"
            android:textColor="@color/whitetext" />

        <TextView
            android:id="@+id/termsandconditionTVRedeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redeemRules"
            android:layout_toEndOf="@+id/redeemOffer"
            android:layout_toRightOf="@+id/redeemOffer"
            android:text="Terms and Conditions"
            android:textColor="@color/whitetext" />


       <!-- <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/termsandconditionTV"
            android:text="Status"
            android:textColor="@color/whitetext" />-->

        <TextView
            android:id="@+id/redeemRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/redeem_date_details"
            android:text="*Only redeem products"
            android:textColor="@color/whitetext" />

        <TextView
            android:id="@+id/redeemPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:text="$150"
            android:textColor="@color/whitetext"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/redeemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Expiry Date"
            android:textColor="@color/whitetext" />

        <TextView
            android:id="@+id/redeem_date_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/redeemDate"
            android:layout_alignStart="@+id/redeemDate"
            android:layout_below="@+id/redeemDate"
            android:paddingBottom="10dp"
            android:text="50"
            android:textColor="@color/whitetext"
            android:textSize="10dp"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>